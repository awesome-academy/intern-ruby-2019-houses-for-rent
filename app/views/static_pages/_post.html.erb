<section class="property-area section-gap relative" id="post">
<div class="container">
  <div class="row no-gutters">
    <div class="col-12 col-md-9">
      <h3  class="text-left font-weight-bold mb-4 pb-2"><%= t "views.post.newpost"%></h3>
      <div class="row">
        <div class="col-lg-4 col-md-12 mb-lg-0 mb-4">
          <div class="view overlay rounded z-depth-1 mb-lg-0 mb-4">
            <%= image_tag "s1.jpg", alt: "", class: "img-fluid"%>
            <a><div class="mask rgba-white-slight"></div></a>
          </div>
        </div>
        <div class="col-lg-8 col-md-6 mb-md-0 mb-4">
          <h3 class="font-weight-normal mb-4">Title</h3>
          <p><%= t "views.post.content"%></p>
          <%= link_to t("views.post.readmore"), "#" , class: "btn"%>
        </div>
      </div>
      <hr class="my-5">
    </div>
    <div class="col-4 col-md-3">
      <h3  class="text-left font-weight-bold mb-4 pb-2"><%= t "views.post.featured_post"%></h3>
    </div>
  </div>
</div>
</section>
