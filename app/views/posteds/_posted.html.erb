<div class="mt-2", id="posted_<%= posted.id %>">
  <div class="media row mt-4">
    <div class="col-2">
      <%= image_tag posted.post_baner, class: "img-thumbnail d-flex mr-3" %>
    </div>
    <div class="col-9">
      <div class="media-body">
        <h5 class="mt-0 font-weight-bold">
          <%= link_to posted.title, posted %>
        </h5>
        <p class="line-clamp-1"><%= posted.content %></p>
        <strong>
          <%= posted.address %>
          <%= posted.ward_name %>
          <%= posted.district_name %>
          <%= posted.province_name %>
        </strong>
      </div>
    </div>
    <div class="col-1">
      <div class="row">
        <%= link_to edit_post_path(posted) do %>
          <i class="fa fa-edit fa-2x col-12"></i>
        <% end %>
        <% if current_user? posted.user %>
          <%= link_to posted, method: :delete, data: { confirm: t(".confirm_del") }, remote: true do %>
            <i class="fa fa-trash fa-2x col-12"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <hr class="my-3">
</div>
