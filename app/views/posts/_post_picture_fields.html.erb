<div class="nested-fields form-row">
  <div class="custom-file mb-4 col-10">
    <%= f.file_field :image_url, multiple: false,
      class: "custom-file-input", id: "inputGroupFile01" %>
    <label class="custom-file-label" for="inputGroupFile01">
      <%= t "post.add_picture" %>
    </label>
  </div>
  <div class="mb-4 col-2">
    <%= link_to_remove_association t(".remove"), f, class: "btn btn-danger btn-sm mt-0" %>
  </div>
</div>
